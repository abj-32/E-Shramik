<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs') %>
    <title>E-Shramik</title>
    <style>
      /* Custom styling for the cards */
      .card {
        border: 1px solid #7a7070; /* Border for the outer card only */
        border-radius: 8px; /* Rounded corners */
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Modern shadow effect */
        transition: transform 0.2s ease, box-shadow 0.2s ease; /* Smooth hover effect */
      }

      .card:hover {
        transform: translateY(-5px); /* Slight lift on hover */
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15); /* Enhanced shadow on hover */
      }

      .list-group-item ion-icon {
        margin-right: 5px; /* Space between icon and text */
      }

      ion-icon {
        color: blue;
      }
    </style>
  </head>
  <body>
    <%- include('./partials/navbar.ejs') %>

    <!-- <%= JSON.stringify(user) %> -->

    <div class="container mt-3">
      <div class="row justify-content-center">
        <% shramik.forEach(sh => { %>
          <div class="col-md-4 d-flex align-items-stretch">
            <div class="card" style="width: 18rem;">
              <!-- <img src="..." class="card-img-top" alt="..."> -->
              <div class="card-body">
                <h5 class="card-title"> <%= sh.name %></h5>
                <p class="card-text"><%= sh.trade %></p>
              </div>
              <ul class="list-group list-group-flush">
                <li class="list-group-item">
                  <ion-icon name="call-sharp"></ion-icon><%= sh.phoneno %>
                </li>
                <li class="list-group-item">
                  <ion-icon name="location"></ion-icon><%= sh.city_of_work %>
                </li>
                <li class="list-group-item">
                  <ion-icon name="construct-outline"></ion-icon>since <%= sh.experience %> Years
                </li>
              </ul>
            </div>
          </div>
        <% }) %>
      </div>
    </div>

    <!-- Include Ionicons -->
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <%- include('./partials/scripts.ejs') %>
  </body>
</html>
